{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "max-len": [1, { "code": 80 }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "no-multi-spaces": ["error"],
    "eol-last": 1
  }
}
